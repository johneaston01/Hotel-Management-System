.drop-menu {
	display: block;
    position:absolute;
	margin-left: 56.5%;
	top:12%;
	text-align: center;
	padding: 10px 4px ;
	font:25px Sans-serif;
	height: 25px;
	max-height: 25px;
	width: 200px;
	background: #5D6029;
	cursor: pointer;
	border: 0px solid #ff8800;
	z-index:250;
	text-decoration:none;
	
}
	
	
	.drop-menu:hover {
		border: 0px solid #ff8800;
		z-index:250;
		position:absolute;
		text-decoration:none;
	}
	
	.drop-menu:hover .sub-menu {
		display: inline-block;
		z-index:250;
		position:relative;
		text-decoration:none;
	}
	
	
	.sub-menu {
		display: none;
		width: 180px;
		background: #fff;
		padding: 10px 10px;
		margin-left: -11px;
		margin-top: 6px;
		border: 1px solid #fff;
		-webkit-box-shadow: 0px 13px 25px rgba(0,0,0, 0.2);
		-moz-box-shadow: 0px 13px 25px rgba(0,0,0, 0.2);
		box-shadow: 0px 13px 25px rgba(0,0,0, 0.2);
		z-index:250;
		position:relative;
		text-decoration:none;
		
	}
	
	.sub-menu li {
		list-style-type: none;
		display: block;
		text-align:left;
		

		font-size: 18px;
		height: 22px;
		padding: 8px 0;
		z-index:250;
		position:relative;
		text-decoration:none;
